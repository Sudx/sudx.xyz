---
// /src/layouts/BaseLayout.astro
import '../styles/global.css';

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content="SUDX is the native cryptocurrency for the open-source ecosystem. Support your favorite projects with transparent donations on the Polygon blockchain and help build the future of free software.">
    <meta name="keywords" content="SUDX, open source, free software, cryptocurrency, blockchain, Polygon, MATIC, DAO, funding, developers, web3, token, crypto for open source">
    <meta name="author" content="SUDX">
    <meta name="google-site-verification" content="jUMJNy8SDw51oSDakPzIRN0ak13O0SUcU77hW1DLK7o" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://sudx.xyz/">
    <meta property="og:title" content="SUDX | The Crypto Token for Open Source">
    <meta property="og:description" content="SUDX is the native cryptocurrency for the open-source ecosystem. Support your favorite projects with transparent donations on the Polygon blockchain and help build the future of free software.">
    <meta property="og:image" content="https://sudx.xyz/assets/bitmap512-512.png">

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://sudx.xyz/">
    <meta property="twitter:title" content="SUDX | The Crypto Token for Open Source">
    <meta property="twitter:description" content="SUDX is the native cryptocurrency for the open-source ecosystem. Support your favorite projects with transparent donations on the Polygon blockchain and help build the future of free software.">
    <meta property="twitter:image" content="https://sudx.xyz/assets/bitmap512-512.png">

    <link rel="icon" href="/favicon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/assets/bitmap192-192.png">
    
    <!-- Preconnect to Google Fonts for better performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Share+Tech+Mono&display=swap" rel="stylesheet">
    
    <script is:inline defer src="/_vercel/speed-insights/script.js"></script>
    <script is:inline defer src="/_vercel/insights/script.js"></script>

    <!-- Google tag (gtag.js) -->
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=AW-17373220701"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'AW-17373220701');
      gtag('config', 'G-FQGCH1X4MP');
    </script>

    <!-- Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "SUDX",
      "url": "https://sudx.xyz",
      "logo": "https://sudx.xyz/assets/bitmap512-512.png",
      "sameAs": [
        "https://x.com/SudxOfficial",
        "https://t.me/sudxcoin",
        "https://github.com/Sudx",
        "https://www.reddit.com/r/SudxLabs/"
      ]
    }
    </script>
</head>
<body>

    <nav class="main-nav">
        <div class="nav-container">
            <a href="/" class="nav-logo-link">
                <img src="/assets/principal.svg" alt="SUDX Logo" class="nav-logo-img">
            </a>
            
            <div class="nav-menu">
                <ul class="nav-links">
                    <li><a href="/">Home</a></li>
                    <li><a href="/whitepaper">Whitepaper</a></li>
                    <li><a href="/dashboard">Dashboard</a></li>
                    <li><a href="/donate">Donate</a></li>
                    <li><a href="/faq">FAQ</a></li>
                    <li><a href="/blog">Blog</a></li>
                    <li><a href="/airdrop" class="nav-link-highlight">Airdrop</a></li>
                    <li><a href="/#community">Community</a></li>
                    <li><a href="#" id="connectWalletBtnDesktop" class="btn btn-nav btn-desktop">Connect Wallet</a></li>
                </ul>
            </div>

            <div class="nav-actions">
                <a href="#" id="connectWalletBtnMobile" class="btn btn-nav btn-mobile">Connect Wallet</a>
                <div class="hamburger">
                    <div class="line"></div>
                    <div class="line"></div>
                    <div class="line"></div>
                </div>
            </div>
        </div>
    </nav>

    <main>
        <slot />
    </main>

    <footer>
        <div class="container">
            <img src="/assets/principal.svg" alt="SUDX Logo" class="footer-logo">
            <div class="footer-links">
                <a id="contractLink" href="https://polygonscan.com/token/0xc56F971934961267586e8283C06018167F0D0E4C" target="_blank" rel="noopener noreferrer">Contract</a>
                <a href="https://app.uncx.network/lockers/token/chain/137/address/0xc56f971934961267586e8283c06018167f0d0e4c" target="_blank" rel="noopener noreferrer">Team Vesting</a>
                <a href="https://app.uncx.network/lockers/univ2/chain/137/address/0x884c355bdd0332abbbf3bf7ca3f68029ae500030" target="_blank" rel="noopener noreferrer">Liquidity Locked</a>
                <a href="mailto:sudx.oficial@gmail.com">Contact</a>
                <a href="/privacy">Privacy Policy</a>
            </div>
            <p class="copyright">&copy; 2025 SUDX. Licensed under the MIT License.</p>
        </div>
    </footer>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ethers/5.7.2/ethers.umd.min.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js" defer></script>
    <script src="../scripts/wallet.js"></script>
    <script src="../scripts/nav.js"></script>
    <script src="../scripts/tracking.js"></script>
</body>
</html>